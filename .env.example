# PostgreSQL Database Configuration
PG_HOST=localhost
PG_PORT=5432
PG_USER=username
PG_PASSWORD=password
PG_DATABASE=esquema_DB

# Application Configuration
PORT=3000
NODE_ENV=development

# Repository Mode
# Set to 'true' to use PostgreSQL, 'false' for InMemory (default: false)
USE_POSTGRES=false

# SMTP Email Configuration (Required for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@sechttps.local
SYSTEM_NAME=SecHTTPS Monitor

# Notification Scheduler Configuration
CRON_EXPRESSION=0 8 * * *
TIMEZONE=Europe/Madrid
ENABLE_SCHEDULER=true
