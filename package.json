{
  "name": "sechttps",
  "version": "1.0.0",
  "description": "Manage certificate expiration on Https servers",
  "homepage": "https://github.com/jmurielSett/secHTTPS#readme",
  "bugs": {
    "url": "https://github.com/jmurielSett/secHTTPS/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmurielSett/secHTTPS.git"
  },
  "license": "ISC",
  "author": "jmuriel",
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx --watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest --run",
    "notify:send": "tsx src/scripts/send-notifications.ts",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:reset": "tsx src/scripts/reset-db.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:clean": "docker-compose down -v"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.2",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.9",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^4.0.18",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^8.0.1",
    "pg": "^8.18.0"
  },
  "optionalDependencies": {
    "@types/pg": "^8.16.0"
  }
}
